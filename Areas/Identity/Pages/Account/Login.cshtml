@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="mx-auto max-w-md py-10">
    <!-- Brand -->
    <div class="mb-8 flex items-center justify-center gap-3">
        <span class="inline-flex h-12 w-12 items-center justify-center rounded-full bg-[#FFD200] ring-2 ring-[#FFD200]/80 ring-offset-2 ring-offset-black">
            <img src="~/images/logo.jpg" alt="Pass It On Academy" class="h-9 w-9 rounded-full object-cover" />
        </span>
        <div class="text-center">
            <h1 class="text-xl font-extrabold tracking-tight">Welcome back</h1>
            <p class="text-sm text-zinc-500">Log in to continue</p>
        </div>
    </div>

    <!-- Card -->
    <div class="rounded-2xl border border-zinc-200 bg-white p-6 shadow-sm">
        <form id="account" method="post" class="space-y-5">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-sm text-red-600" role="alert"></div>

            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium">Email</label>
                <input asp-for="Input.Email" type="email" autocomplete="username"
                       class="mt-1 block w-full rounded-lg border border-zinc-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-[#FFD200]" />
                <span asp-validation-for="Input.Email" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium">Password</label>
                <input asp-for="Input.Password" type="password" autocomplete="current-password"
                       class="mt-1 block w-full rounded-lg border border-zinc-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-[#FFD200]" />
                <span asp-validation-for="Input.Password" class="text-sm text-red-600"></span>
            </div>

            <div class="flex items-center justify-between">
                <label class="inline-flex items-center gap-2 text-sm text-zinc-700">
                    <input class="h-4 w-4 rounded border-zinc-300 text-black focus:ring-[#FFD200]" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>

                <a id="forgot-password" asp-page="./ForgotPassword"
                   class="text-sm font-semibold text-black underline hover:text-zinc-700">
                    Forgot password?
                </a>
            </div>

            <button id="login-submit" type="submit"
                    class="inline-flex w-full items-center justify-center rounded-xl bg-black px-4 py-2.5 text-sm font-semibold text-white hover:bg-zinc-900">
                Log in
            </button>

            <p class="text-center text-sm text-zinc-500">
                Don’t have an account?
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="font-semibold text-black underline hover:text-zinc-700">Create one</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
 