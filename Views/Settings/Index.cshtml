@model PassItOnAcademy.Models.AcademySetting
@{
    ViewData["Title"] = "Settings";
}
<h1 class="text-2xl font-extrabold mb-4">Settings</h1>
@if (TempData["Msg"] is string msg)
{
    <div class="mb-4 rounded-xl border bg-white p-3">@msg</div>
}
<form method="post" class="grid md:grid-cols-2 gap-6">
    @Html.AntiForgeryToken()
    <div class="rounded-xl border bg-white p-4 space-y-3">
        <div class="font-semibold mb-1">Rules</div>
        <label class="text-sm">Cancel Cut-off (hours)</label>
        <input asp-for="CancelCutoffHours" type="number" class="w-full rounded-lg border px-3 py-2" />
        <label class="text-sm">Seat Hold (minutes)</label>
        <input asp-for="SeatHoldMinutes" type="number" class="w-full rounded-lg border px-3 py-2" />
        <label class="text-sm">Default Capacity</label>
        <input asp-for="DefaultCapacity" type="number" class="w-full rounded-lg border px-3 py-2" />
        <label class="text-sm">Timezone</label>
        <input asp-for="Timezone" class="w-full rounded-lg border px-3 py-2" />
    </div>
    <div class="rounded-xl border bg-white p-4 space-y-3">
        <div class="font-semibold mb-1">Academy Profile</div>
        <label class="text-sm">Coach Name</label>
        <input asp-for="CoachName" class="w-full rounded-lg border px-3 py-2" />
        <label class="text-sm">Coach Bio</label>
        <textarea asp-for="CoachBio" rows="5" class="w-full rounded-lg border px-3 py-2"></textarea>
        <label class="text-sm">Contact Email</label>
        <input asp-for="ContactEmail" class="w-full rounded-lg border px-3 py-2" />
        <label class="text-sm">Contact Phone</label>
        <input asp-for="ContactPhone" class="w-full rounded-lg border px-3 py-2" />
        <label class="text-sm">Instagram</label>
        <input asp-for="Instagram" class="w-full rounded-lg border px-3 py-2" />
        <label class="text-sm">Facebook</label>
        <input asp-for="Facebook" class="w-full rounded-lg border px-3 py-2" />
        <label class="text-sm">LinkedIn</label>
        <input asp-for="LinkedIn" class="w-full rounded-lg border px-3 py-2" />
    </div>
    <div class="md:col-span-2 flex gap-3">
        <a asp-controller="Home" asp-action="Index" class="rounded-lg border px-4 py-2 text-sm">Cancel</a>
        <button class="rounded-lg bg-black px-4 py-2 text-sm text-white">Save</button>
    </div>
</form>
