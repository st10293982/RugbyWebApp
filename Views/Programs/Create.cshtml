@model PassItOnAcademy.Models.TrainingProgram
@{
    ViewData["Title"] = "Create Program";
}

<div class="mx-auto max-w-3xl space-y-6">
    <div>
        <h1 class="text-2xl md:text-3xl font-extrabold tracking-tight">Create program</h1>
        <p class="text-sm text-zinc-500">Define a training program with defaults used by sessions.</p>
    </div>

    <form asp-action="Create" method="post" class="space-y-6 rounded-2xl border border-zinc-200 bg-white p-6 shadow-sm">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-sm text-red-600"></div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div class="md:col-span-2">
                <label asp-for="Name" class="block text-sm font-medium">Name</label>
                <input asp-for="Name" class="mt-1 block w-full rounded-lg border border-zinc-300 px-3 py-2" />
                <span asp-validation-for="Name" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Level" class="block text-sm font-medium">Level / Age</label>
                <input asp-for="Level" placeholder="U18, Beginner, etc."
                       class="mt-1 block w-full rounded-lg border border-zinc-300 px-3 py-2" />
                <span asp-validation-for="Level" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="DurationMinutes" class="block text-sm font-medium">Duration (minutes)</label>
                <input asp-for="DurationMinutes" type="number" min="1"
                       class="mt-1 block w-full rounded-lg border border-zinc-300 px-3 py-2" />
                <span asp-validation-for="DurationMinutes" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Price" class="block text-sm font-medium">Default price (ZAR)</label>
                <input asp-for="Price" type="number" step="0.01" min="0"
                       class="mt-1 block w-full rounded-lg border border-zinc-300 px-3 py-2" />
                <span asp-validation-for="Price" class="text-sm text-red-600"></span>
            </div>

            <div class="flex items-center gap-2">
                <input asp-for="IsActive" type="checkbox" class="h-5 w-5 rounded border-zinc-300 text-black focus:ring-[#FFD200]" />
                <label asp-for="IsActive" class="text-sm">Active</label>
            </div>
        </div>

        <div>
            <label asp-for="Description" class="block text-sm font-medium">Description</label>
            <textarea asp-for="Description" rows="4"
                      class="mt-1 block w-full rounded-lg border border-zinc-300 px-3 py-2"></textarea>
            <span asp-validation-for="Description" class="text-sm text-red-600"></span>
        </div>

        <div class="flex items-center gap-3 pt-2">
            <a asp-action="Index" class="rounded-lg border border-zinc-300 px-4 py-2 text-sm hover:bg-zinc-50">Cancel</a>
            <button type="submit" class="rounded-xl bg-black px-5 py-2.5 text-sm font-semibold text-white hover:bg-zinc-900">
                Create program
            </button>
        </div>
    </form>
</div>
