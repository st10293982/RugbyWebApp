@{
    ViewData["Title"] = "About";
}

@section FullWidthTop {
    <style>
        /* --- Page-local effects (no external deps) --- */
        .hero-fixed {
            background-attachment: fixed;
            background-size: cover;
            background-position: center;
        }

        @@keyframes fadeUp {
            from {
                opacity: 0;
                transform: translateY(14px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fadeUp {
            animation: fadeUp .6s ease-out both;
        }

        .tilt-3d {
            transform-style: preserve-3d;
            transform: perspective(1100px) rotateX(0) rotateY(0);
            transition: transform .5s ease, box-shadow .4s ease;
        }

            .tilt-3d:hover {
                transform: perspective(1100px) rotateX(6deg) rotateY(-6deg) translateZ(0);
            }

        .lift-z {
            transform: translateZ(30px);
        }

        .noise {
            background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='80' height='80' viewBox='0 0 80 80'><filter id='n'><feTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='2' stitchTiles='stitch'/></filter><rect width='100%' height='100%' filter='url(%23n)' opacity='.04'/></svg>");
            background-size: 200px 200px;
            pointer-events: none;
        }

        /* --------- VISIBILITY UPGRADE FOR JOURNEY CARDS ---------- */
        .journey-card {
            position: relative;
            overflow: hidden;
        }

            .journey-card img {
                display: block;
                width: 100%;
                height: 12rem;
                object-fit: cover;
            }
        @@media (min-width:768px) {
            .journey-card img

        {
            height: 12rem;
        }

        }

        /* Dark gradient that strengthens on hover */
        .journey-card .overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(0deg, rgba(0,0,0,.88) 0%, rgba(0,0,0,.6) 38%, rgba(0,0,0,.15) 72%, rgba(0,0,0,0) 100%);
            opacity: .95;
            transition: opacity .25s ease;
        }

        .journey-card:hover .overlay {
            opacity: 1;
        }

        /* Caption with blur + shadow for maximum contrast */
        .journey-card figcaption {
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            padding: .7rem 1rem;
            color: #fff;
            font-size: .82rem;
            line-height: 1.25rem;
            backdrop-filter: blur(2px);
            text-shadow: 0 1px 2px rgba(0,0,0,.9), 0 4px 12px rgba(0,0,0,.6);
        }
        @@media (min-width:768px) {
            .journey-card figcaption

        {
            font-size: .92rem;
        }

        }
        /* --------------------------------------------------------- */
    </style>

    <!-- HERO (unchanged) -->
    <section class="relative isolate overflow-clip">
        <div class="hero-fixed h-[46vh] md:h-[56vh] w-full"
             style="background-image:url('@Url.Content("~/images/childtraining4.jpg")')"></div>

        <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/70 via-black/35 to-transparent"></div>
        <div class="pointer-events-none absolute inset-0 [mask-image:linear-gradient(10deg,black_55%,transparent_80%)] bg-gradient-to-r from-emerald-400/10 via-cyan-300/10 to-yellow-300/10"></div>
        <div class="pointer-events-none absolute inset-0 noise"></div>

        <div class="absolute inset-0 flex items-end">
            <div class="mx-auto max-w-7xl w-full px-4 sm:px-6 lg:px-8 pb-8">
                <div class="inline-flex flex-col gap-2 rounded-2xl backdrop-blur-md bg-white/10 border border-white/20 px-5 md:px-7 py-4 animate-fadeUp">
                    <h1 class="text-3xl md:text-5xl font-extrabold tracking-tight text-white">
                        About PassItOn Academy
                    </h1>
                    <p class="text-zinc-100/90 md:text-lg max-w-3xl">
                        At its core, Pass It On is about sharing rugby knowledge and experience—handing down tips and
                        advice to help youngsters grow on their rugby journey. We offer specialised, needs-based coaching
                        in a relaxed but focused environment—let’s grow together as players of this great game.
                    </p>
                </div>
            </div>
        </div>
    </section>
}

<section class="space-y-12 md:space-y-14">
    <!-- What Pass It On is all about -->
    <div class="grid gap-6 md:grid-cols-3">
        <div class="md:col-span-2 tilt-3d rounded-2xl border border-zinc-200/70 bg-white/60 backdrop-blur-md shadow-[0_10px_30px_-10px_rgba(0,0,0,.15)]">
            <div class="p-6 md:p-7 lift-z">
                <h2 class="text-xl md:text-2xl font-extrabold tracking-tight text-zinc-900">What Pass It On is all about</h2>
                <p class="mt-2 text-sm md:text-base text-zinc-700 whitespace-pre-line">
                    At the core Pass It On stands for passing on my knowledge and experience in the game, creating an awesome opportunity to hand down valuable tips and advice to youngster looking to grow in their rugby journey. Growth is the key to the game, whether in primary school getting to grips with you position or in high school and preparing yourself for the level you want to preform at.
                    Pass It On is specialised rugby coaching tailored to your needs. Its personal and relaxed at hand with a mindset to improve. Join us and let us grow together as players of this wonderful game called rugby.
                </p>
            </div>
        </div>

        <!-- A bit about me -->
        <aside class="tilt-3d rounded-2xl border border-zinc-200/70 bg-white/60 backdrop-blur-md shadow-[0_10px_30px_-10px_rgba(0,0,0,.15)]">
            <div class="p-6 md:p-7 lift-z">
                <h3 class="text-lg md:text-xl font-bold text-zinc-900">A bit about me</h3>
                <p class="mt-2 text-sm md:text-[15px] text-zinc-700 whitespace-pre-line">
                    My name is Zak Smith currently a student athlete at UKZN in Durban. In my rugby journey I’ve been fortunate to experience several different rugby environments surrounding myself with great players and coaches, which has shaped the player and coach I am today. Being in a space where you are still a player yourself and get the privilege to coach as well is an amazing opportunity, I get to learn and teach at the same time.
                </p>
            </div>
        </aside>
    </div>

    <!-- My rugby journey (3 images in order you provided) -->
    <div>
        <h2 class="text-xl md:text-2xl font-extrabold tracking-tight mb-3">My rugby journey</h2>

        <div class="grid gap-3 sm:grid-cols-3">
            <!-- 1 -->
            <figure class="journey-card rounded-xl border border-zinc-200 bg-white">
                <img src="@Url.Content("~/images/rugbyjourney1.jpg")" alt="Primary school — Glenwood Prep" />
                <div class="overlay"></div>
                <figcaption>
                    Primary school days at Glenwood Prep, remain very special to me and I was privileged
                    enough to get my 50 caps for the first team.
                </figcaption>
            </figure>

            <!-- 2 -->
            <figure class="journey-card rounded-xl border border-zinc-200 bg-white">
                <img src="@Url.Content("~/images/rugbyjourney2.jpg")" alt="High school — DHS" />
                <div class="overlay"></div>
                <figcaption>
                    Memorable high school journey at DHS with lots of competition from grade 8 and
                    all the way to my Matric year
                </figcaption>
            </figure>

            <!-- 3 -->
            <figure class="journey-card rounded-xl border border-zinc-200 bg-white">
                <img src="@Url.Content("~/images/rugbyjourney3.jpg")" alt="UKZN — Varsity Shield & Premier League" />
                <div class="overlay"></div>
                <figcaption>
                    Currently playing Varsity Shield and Premier League Club rugby at UKZN
                </figcaption>
            </figure>
        </div>

    <!-- CTA -->
    <div class="text-center">
        <a asp-controller="Schedule" asp-action="Index"
           class="inline-flex items-center rounded-full bg-[#FFD200] px-7 py-3 text-sm md:text-[15px] font-semibold text-black hover:brightness-95 shadow-[0_8px_20px_-10px_rgba(0,0,0,.35)]">
            View Schedule &amp; Book
        </a>
    </div>
</section>
