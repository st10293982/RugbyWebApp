@model PassItOnAcademy.ViewModels.ContactFormVM
@{
    ViewData["Title"] = "Contact";
}

<section class="max-w-3xl mx-auto">
    <header class="mb-6 text-center">
        <h1 class="text-3xl md:text-4xl font-extrabold">Contact us</h1>
        <p class="mt-2 text-zinc-600">Have a question about bookings, programs or scheduling? Drop us a line.</p>
    </header>

    <div class="rounded-2xl border border-zinc-200 bg-white p-6 shadow-sm">
        <form asp-action="Contact" method="post" class="space-y-5">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-sm text-red-600"></div>

            <div class="grid gap-4 sm:grid-cols-2">
                <div>
                    <label asp-for="Name" class="block text-sm font-medium">Name</label>
                    <input asp-for="Name" class="mt-1 w-full rounded-lg border border-zinc-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-[#FFD200]" />
                    <span asp-validation-for="Name" class="text-sm text-red-600"></span>
                </div>
                <div>
                    <label asp-for="Email" class="block text-sm font-medium">Email</label>
                    <input asp-for="Email" type="email" class="mt-1 w-full rounded-lg border border-zinc-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-[#FFD200]" />
                    <span asp-validation-for="Email" class="text-sm text-red-600"></span>
                </div>
            </div>

            <div class="grid gap-4 sm:grid-cols-2">
                <div>
                    <label asp-for="Phone" class="block text-sm font-medium">Phone (optional)</label>
                    <input asp-for="Phone" class="mt-1 w-full rounded-lg border border-zinc-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-[#FFD200]" />
                    <span asp-validation-for="Phone" class="text-sm text-red-600"></span>
                </div>
                <div>
                    <label asp-for="Subject" class="block text-sm font-medium">Subject</label>
                    <input asp-for="Subject" class="mt-1 w-full rounded-lg border border-zinc-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-[#FFD200]" />
                    <span asp-validation-for="Subject" class="text-sm text-red-600"></span>
                </div>
            </div>

            <div>
                <label asp-for="Message" class="block text-sm font-medium">Message</label>
                <textarea asp-for="Message" rows="6" class="mt-1 w-full rounded-lg border border-zinc-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-[#FFD200]"></textarea>
                <span asp-validation-for="Message" class="text-sm text-red-600"></span>
            </div>

            @* Honeypot (hidden) *@
            <input asp-for="Company" class="hidden" autocomplete="off" />

            <div class="flex items-center justify-between">
                <p class="text-xs text-zinc-500">We usually respond within 24 hours.</p>
                <button type="submit"
                        class="inline-flex items-center rounded-xl bg-[#FFD200] px-5 py-2.5 text-sm font-semibold text-black hover:brightness-95">
                    Send message
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
