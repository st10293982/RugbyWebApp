@{
    ViewData["Title"] = "Thanks";
}
<section class="max-w-xl mx-auto text-center">
    <div class="rounded-2xl border border-zinc-200 bg-white p-8 shadow-sm">
        <div class="mx-auto mb-3 inline-flex h-12 w-12 items-center justify-center rounded-full bg-[#FFD200]">
            <svg viewBox="0 0 24 24" fill="currentColor" class="h-6 w-6 text-black"><path d="M9 16.2l-3.5-3.5L4 14.2l5 5L20 8.2l-1.5-1.4z" /></svg>
        </div>
        <h1 class="text-2xl font-extrabold">Thanks for reaching out!</h1>
        <p class="mt-2 text-zinc-600">Your message has been received. We’ll get back to you soon.</p>
        <a asp-controller="Home" asp-action="Index"
           class="mt-6 inline-flex items-center rounded-full bg-black px-5 py-2 text-sm font-semibold text-white hover:bg-zinc-900">
            Back to Home
        </a>
    </div>
</section>
