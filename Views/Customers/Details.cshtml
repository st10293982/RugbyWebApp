@model PassItOnAcademy.Models.ApplicationUser
@using PassItOnAcademy.Models
@{
    ViewData["Title"] = "Customer"; var bookings = (IEnumerable<Booking>)ViewBag.Bookings;
}
<h1 class="text-2xl font-extrabold mb-2">@Model.FullName</h1>
<div class="text-sm text-zinc-600 mb-6">@Model.Email · @Model.PhoneNumber</div>

<div class="rounded-xl border bg-white">
    <table class="min-w-full divide-y">
        <thead class="bg-zinc-50">
            <tr>
                <th class="px-4 py-2 text-left text-xs font-semibold">Booking</th>
                <th class="px-4 py-2 text-left text-xs font-semibold">Session</th>
                <th class="px-4 py-2 text-left text-xs font-semibold">When</th>
                <th class="px-4 py-2 text-left text-xs font-semibold">Status</th>
            </tr>
        </thead>
        <tbody class="divide-y">
            @foreach (var b in bookings)
            {
                <tr>
                    <td class="px-4 py-2">#@b.Id</td>
                    <td class="px-4 py-2">@b.Session?.Title</td>
                    <td class="px-4 py-2 text-sm">@b.Session?.StartUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="px-4 py-2 text-sm">@b.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>
